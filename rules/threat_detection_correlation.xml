    <mitre>
      <id>T1572</id>
      <id>T1003.001</id>
    </mitre>
    <group>pci_dss_11.4,gdpr_IV_35.7.d,nist_800_53_SI.4</group>
  </rule>

  <!-- Rule 110903: Credential Dumping + Shadow Deletion = Ransomware Preparation -->
  <rule id="110903" level="15" frequency="2" timeframe="300">
    <if_matched_sid>110007,110009</if_matched_sid>
    <same_source_ip/>
    <description>High-Confidence Ransomware Preparation: Credential dumping followed by shadow copy deletion detected (blocking recovery options)</description>
    <mitre>
      <id>T1003.001</id>
      <id>T1490</id>
    </mitre>
    <group>pci_dss_11.4,gdpr_IV_35.7.d,nist_800_53_SI.4</group>
